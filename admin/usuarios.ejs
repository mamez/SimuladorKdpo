<!-- Tabla -  Usuarios -->
<button  href="" type="button" style="margin-right: 1%" class="btn btn-info btn-primary pull-right" data-toggle="modal" data-target="#modal2">Nuevo</button>
<div >
      <div class="col-auto">
            <table   class="table table-striped table-hover table-responsive " id="Tabla_usuarios" >
                <thead>									
                      <th>Id</th>
                      <th>Usuario</th>
                      <th>Referencia</th>
                      <th>Password</th>
                      <th>Acciones</th>
                </thead>
                <tbody>
                <% usuarios.forEach((u ,index)=> { %>   
                <tr id="row1" data-toggle="modal" data-id="1" data-target="#orderModal">
                   <td id="usuario_id"><%=u.usuario_id%></td>
                   <td id="usuario"><%=u.usuario%></td>
                   <td id="referencia"><%=u.referencia%></td>
                   <td id="password"><%=u.password%></td>
                   <td id="b1"  style="width: 100px"  >
                      <span value="Put"  class="btn  btn-primary"  onclick="UpdateUserDetails('<%=u.usuario_id%>','<%=u.usuario%>','<%=u.referencia%>','<%=u.password%>')" ><i class="fa fa-edit" aria-hidden="true"></i></span>
                      <span value="Delete" class="btn btn-primary"   onclick="openModal('<%=u.usuario_id%>')"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                       
                   </td>
                </tr>
                </tbody>
            <% });%>
        </table>  
    </div>
 </div>
 
<!-- Modal - Registro de Usuarios -->
 
 <div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
       <div class="modal-dialog" role="document">
          <div class="modal-content">
             <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> <b> Nuevo Usuario </b> </h4>
             </div>
             <form  method="post"  >
             <div class="modal-body">
                 
                  <div class="row">
                     <div class="col-sm-9">
                        <div class="form-group">
                          <label for="Usuario">Usuario</label> 
                          <input type="text"  class="form-control" name="usuario"  placeholder="usuario" id="usuario"  required="required"/>
                        </div>
                     </div>
                     <div class="col-sm-9">
                        <div class="form-group">
                             <label for="referencia">Referencia</label> 
                          <input type="text"  class="form-control" placeholder="referencia"  name="referencia"   id="referencia"  required="required"/>
                        </div>
                     </div>
                  <div class="col-sm-9">
                        <div class="form-group">
                          <label for="password">Password</label> 
                          <input type="password" placeholder="password"  class="form-control" name="password"   id="password"  required="required"/>
                        </div>
                     </div>
                  </div> 
               
             </div>
             <div class="modal-footer">
               <button type="submit"   class="btn btn-primary pull-right">Guardar</button>
             </div>
            </form>
          </div>
       </div>
    </div>
            
 
 <!-- Modal - Editar de Usuarios -->


    <div class="modal fade" id="modal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
          <div class="modal-dialog" role="document">
             <div class="modal-content">
                <div class="modal-header">
                   <button type="button" class="close" data-dismiss="modal">&times;</button>
                   <h4 class="modal-title"> <b> Editar Usuario </b> </h4>
                </div>
                <form  method="post" action="" id="formEdit"  >
                <div class="modal-body">
                   
                     <div class="row">
                        <div class="col-sm-9">
                           <div class="form-group">
                             <label for=" Usuario" >Usuario</label> 
                             <input type="text"  class="form-control" name="usuario"  placeholder="Usuario" id="editar_usuario"  required="required"/>
                           </div>
                        </div>
                        <div class="col-sm-9">
                           <div class="form-group">
                                <label for="referencia">Referencia</label> 
                             <input type="text"  class="form-control" placeholder="referencia"  name="referencia"   id="editar_referencia"  required="required"/>
                           </div>
                        </div>
                       <div class="col-sm-9">
                           <div class="form-group">
                             <label for="password" >Password</label> 
                             <input type="password" placeholder="password"  class="form-control" name="password"   id="editar_password"  required="required"/>
                           </div>
                       </div>
                     </div>
                  
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn  btn-primary pull-right" id="registrar" >Guardar</button>
                </div>
               </form>
             </div>
          </div>
       </div>
 
 <!-- Modal - Eliminar de Usuarios -->
      <div class="modal fade" id="modal4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
             <div class="modal-dialog" role="document">
                <div class="modal-content">
                   <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title"> <b> Eliminar Usuario </b>    </h4>
                   </div>
                   
                   <div class="modal-body">
                     <form  method="post" action="" id="formDelate"  >
                        <div class="row">
                           <div class="col-sm-9">
                              <div class="form-group">
                                <label for="Usuario">Esta seguro que desa eliminar el usuario</label> 
                              </div>
                           </div>
                         </div>

                     <div class="modal-footer">
                       <button type="button" class="btn btn-primary pull-left" data-dismiss="modal">NO</button>
                       <button type="submit" class="btn btn-primary pull-right" id="eliminar" onclick="#">SI</button>
                     </div>
                     </form>
                   </div>
                </div>
             </div>
      </div>


      


         
 
<!-- Script - funcionalidad -->
<script>
jQuery.noConflict(); 
function openModal(id){
$('#modal4').modal('show');
var action="/admin/user/"+id+"?_method=DELETE"
    $('#formDelate').attr('action', action);
};
</script>



<script>
  function UpdateUserDetails(id,us,refe,pass) {
   $("#editar_usuario").val(us);
   $("#editar_referencia").val(refe);
   $("#editar_password").val(pass);
   $('#modal3').modal('show');
   var action="/admin/user/"+id+"?_method=PUT"
   $('#formEdit').attr('action', action);
};
</script>






		
            


