<script>
  function UpdateUserDetails(id,na,fil,ser,stat) {
   $("#edit_name").val(na);
   $("#edit_filter").val(fil);
   $("#edit_server").val(ser);
   $("#edit_static").val(stat);
   $('#modal2').modal('show');
   var action="/admin/junction/"+id+"?_method=PUT"
   $('#formEdit').attr('action', action);
};
</script>